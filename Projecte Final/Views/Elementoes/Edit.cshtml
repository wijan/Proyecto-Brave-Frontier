@model Projecte_Final.Models.Elemento

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm(null, null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Elemento</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ElementoID)

        <div class="form-group">
            @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DebilVSID, "DebilVSID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("DebilVSID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DebilVSID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FuerteVSID, "FuerteVSID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("FuerteVSID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FuerteVSID, "", new { @class = "text-danger" })
            </div>
        </div>

        @if (Model.Icono != null)
        {
            <div class="form-group">
                <span class="control-label col-md-2"><strong>Icono actual</strong></span>
                <div class="col-md-10">
                    <img src="~/File?id=@Html.DisplayFor(model => model.IconoID)" />
                </div>
            </div>
        }

        <div class="form-group">
            @Html.Label("Icono", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" id="Icono" name="uploadIcono" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
